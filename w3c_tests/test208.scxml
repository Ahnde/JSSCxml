<?xml version="1.0" encoding="UTF-8"?><!-- we test that cancel works. --><scxml xmlns="http://www.w3.org/2005/07/scxml" initial="s0" version="1.0" datamodel="ecmascript">

   
<state id="s0">
  <onentry>
   <send id="foo" event="event1" delay="0.5s"/>
   <send event="event2" delay="1s"/>
   <cancel sendid="foo"/>
    </onentry>

  <transition event="event2" target="pass"/>
  <transition event="*" target="fail"/>
 
 </state>


<final id="pass"><onentry><log label="Outcome" expr="'pass'"/></onentry></final>
<final id="fail"><onentry><log label="Outcome" expr="'fail'"/></onentry></final>

</scxml>